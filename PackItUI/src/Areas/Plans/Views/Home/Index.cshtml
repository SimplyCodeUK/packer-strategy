@model PackItUI.Areas.Plans.Models.HomeViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Plans";

    var DataClass = "control-label";
}
<h2>@ViewData["Title"]</h2>
<table class="table">
    <tr>
        <th scope="col"><label asp-for="Information.Version"></label></th>
        <th scope="col"><label asp-for="Information.About"></label></th>
    </tr>
    <tr>
        <td>@Model.Information.Version</td>
        <td>@Model.Information.About</td>
    </tr>
</table>
@if (Model.Items != null)
{
<table class="table">
    <thead>
        <tr>
            <th scope="col"><label asp-for="Items.FirstOrDefault().PlanId"></label></th>
            <th scope="col"><label asp-for="Items.FirstOrDefault().Name"></label></th>
            <th scope="col">
                <a role="button" class="btn btn-primary" asp-action="Create">
                    <i class="fas fa-plus"></i>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
        <tr>
            <td><span class="@DataClass">@item.PlanId</span></td>
            <td><span class="@DataClass">@item.Name</span></td>
            <td>
                <a role="button" class="btn btn-info" asp-controller="Home" asp-action="Update" asp-route-id="@item.PlanId">
                    <i class="fas fa-pencil-alt"></i>
                </a>
                <a role="button" class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@item.PlanId">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
}
