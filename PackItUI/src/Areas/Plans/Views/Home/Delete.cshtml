@model PackItUI.Areas.Plans.Models.PlanEditViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete Plan";
}
<h2>@ViewData["Title"]</h2>
<form asp-controller="Home" asp-action="Delete" method="post">
    <div id="Tabs" role="tabpanel">
        <ul class="nav nav-tabs">
            <li class="active">
                <a class="nav-link" href="#plan" role="tab" data-toggle="tab">Plan</a>
            </li>
        </ul>
        <div class="tab-content">
            <br />
            <div class="tab-pane active" id="plan">
                @Html.EditorFor(m => Model.Data, "PlanPane", new { crud = PackItUI.Helpers.Crud.Delete })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <input type="submit" value="Delete" class="btn btn-secondary" />
        </div>
    </div>
    <br />
</form>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
