@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home Page";
}

<div id="packitCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#packitCarousel" data-bs-slide-to="0" class="active" aria-label="Slide 0"></button>
        <button type="button" data-bs-target="#packitCarousel" data-bs-slide-to="1" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#packitCarousel" data-bs-slide-to="2" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#packitCarousel" data-bs-slide-to="3" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/banner1.svg" alt="PackIt" />
            <div class="carousel-caption d-none d-md-block">
                <h5>Packaging Solution</h5>
                <p></p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/banner2.svg" alt="PackIt Materials" />
            <div class="carousel-caption d-none d-md-block">
                <h5>Maintain Your Materials</h5>
                <p>Maintian details of your materials.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/banner3.svg" alt="PackIt Plans" />
            <div class="carousel-caption d-none d-md-block">
                <h5>Define Material Usage</h5>
                <p>Define how you aim to use your materials.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/banner4.svg" alt="PackIt Packs" />
            <div class="carousel-caption d-none d-md-block">
                <h5>Create A Pack</h5>
                <p>Use your materials and plans to create a pack.</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#packitCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#packitCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
