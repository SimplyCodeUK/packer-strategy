@model PackIt.Pack.Pack
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Display Pack";

    var LabelClass = "control-label col-sm-1";
    var InputClass = "form-control";
}
<h2>@ViewData["Title"]</h2>
<form asp-controller="Home" asp-action="Display" method="post">
    <input asp-for="PlanCode" hidden="hidden" />
    <input asp-for="PlanName" hidden="hidden" />
    <input asp-for="MaterialType" hidden="hidden" />
    <input asp-for="MaterialCode" hidden="hidden" />
    <input asp-for="MaterialName" hidden="hidden" />

    <div id="Tabs" role="tabpanel">
        <ul class="nav nav-tabs">
            <li class="active">
                <a class="nav-link" href="#pack" role="tab" data-toggle="tab">Pack</a>
            </li>
        </ul>
        <div class="tab-content">
            <br />
            <div class="tab-pane active" id="pack">
                <div class="form-group">
                    <label asp-for="PackId" class="@LabelClass"></label>
                    <div class="col-sm-10">
                        <input asp-for="PackId" class="@InputClass" disabled="disabled" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="@LabelClass"></label>
                    <div class="col-sm-10">
                        <input asp-for="Name" class="@InputClass" />
                    </div>
                </div>
                @{ await Html.RenderPartialAsync("_GraphicScriptsPartial"); }
                <div class="form-group">
                    <canvas id="renderCanvas"></canvas>
                    <script>
                        drawPack(document.querySelector('#renderCanvas'), '@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model, new Newtonsoft.Json.JsonSerializerSettings { StringEscapeHandling = Newtonsoft.Json.StringEscapeHandling.EscapeHtml }))')
                    </script>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <input type="submit" value="Update" class="btn btn-secondary" />
        </div>
    </div>
    <br />
</form>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
