@model PackItUI.Areas.Materials.Models.MaterialViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "New Material";
}
<h2>@ViewData["Title"]</h2>

@using (Html.BeginForm("Create", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="Data.MaterialId"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Data.MaterialId" placeholder="Enter Material Id" />
                <span asp-validation-for="Data.MaterialId"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="Data.Type"></label>
            <div class="col-sm-10">
                <select class="form-control" asp-for="Data.Type" asp-items="Html.GetEnumSelectList<PackIt.Helpers.Enums.MaterialType>()"></select>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="Data.Name"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Data.Name" placeholder="Enter Material Name" />
                <span asp-validation-for="Data.Name"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="Data.Notes"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Data.Notes" placeholder="Enter Material Notes" />
                <span asp-validation-for="Data.Notes"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
