@model PackItUI.Areas.Materials.Models.MaterialModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Material Details";
}
<h2>@ViewData["Title"]</h2>

<form>
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="Data.MaterialId"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Data.MaterialId" disabled="disabled" />
                <span asp-validation-for="Data.MaterialId"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="Data.Name"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Data.Name" disabled="disabled" />
                <span asp-validation-for="Data.Name"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="Data.Notes"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Data.Notes" disabled="disabled" />
                <span asp-validation-for="Data.Notes"></span>
            </div>
        </div>
    </div>
</form>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Data.MaterialId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
