@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home Page";
}

<div id="packitCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#packitCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#packitCarousel" data-slide-to="1"></li>
        <li data-target="#packitCarousel" data-slide-to="2"></li>
        <li data-target="#packitCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/banner1.svg" alt="ASP.NET" />
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/banner2.svg" alt="Visual Studio" />
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/banner3.svg" alt="Package Management" />
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/banner4.svg" alt="Microsoft Azure" />
        </div>
    </div>
    <a class="carousel-control-prev" href="#packitCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#packitCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
