@model PackItUI.Areas.Plans.Models.PlanViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "New Plan";

    var LabelClass = "control-label col-sm-1";
    var InputClass = "form-control";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Home" asp-action="Create" method="post">
    <div id="Tabs" role="tabpanel">
        <ul class="nav nav-tabs" role="tablist">
            <li class="active">
                <a href="#plan" aria-controls="plan" role="tab" data-toggle="tab">Plan</a>
            </li>
        </ul>
        <div class="tab-content">
            <br />
            <div role="tabpanel" class="tab-pane form-horizontal active" id="plan">
                <div class="form-group">
                    <label asp-for="Data.PlanId" class="@LabelClass"></label>
                    <div class="col-sm-10">
                        <input asp-for="Data.PlanId" class="@InputClass" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Data.Name" class="@LabelClass"></label>
                    <div class="col-sm-10">
                        <input asp-for="Data.Name" class="@InputClass" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
    <br />
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
