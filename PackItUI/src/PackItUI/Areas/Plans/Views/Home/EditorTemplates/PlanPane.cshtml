@model PackItUI.Areas.Plans.Models.PlanEditViewModel.Plan
@{
    var LabelClass = "control-label col-sm-1";
    var InputClass = "form-control";
    var Crud = (PackItUI.Helpers.Crud)ViewData["crud"];
    var DisabledFlag = Crud == PackItUI.Helpers.Crud.Delete ? "disabled" : null;
    var IdDisabledFlag = Crud == PackItUI.Helpers.Crud.Delete || Crud == PackItUI.Helpers.Crud.Update ? "disabled" : null;
}
<div class="form-group">
    <label asp-for="PlanId" class="@LabelClass"></label>
    <div class="col-sm-10">
        <input asp-for="PlanId" class="@InputClass" disabled="@IdDisabledFlag" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Name" class="@LabelClass"></label>
    <div class="col-sm-10">
        <input asp-for="Name" class="@InputClass" disabled="@DisabledFlag" />
    </div>
</div>
