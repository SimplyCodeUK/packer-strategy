@model PackItUI.Areas.Packs.Models.PackViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete Pack";

    var LabelClass = "control-label col-sm-1";
    var InputClass = "form-control";
    var WeightFormat = "{0:N4}";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Home" asp-action="Delete" method="post">
    <div id="Tabs" role="tabpanel">
        <ul class="nav nav-tabs">
            <li class="active">
                <a class="nav-link" href="#pack" role="tab" data-toggle="tab">Pack</a>
            </li>
            <li>
                <a class="nav-link" href="#costings" role="tab" data-toggle="tab">Costings</a>
            </li>
        </ul>
        <div class="tab-content">
            <br />
            <div class="tab-pane active" id="pack">
                <div class="form-group">
                    <label asp-for="Data.PackId" class="@LabelClass"></label>
                    <div class="col-sm-10">
                        <input asp-for="Data.PackId" class="@InputClass" disabled="disabled" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Data.Name" class="@LabelClass"></label>
                    <div class="col-sm-10">
                        <input asp-for="Data.Name" class="@InputClass" disabled="disabled" />
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="costings">
                <div class="form-group">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col"><label asp-for="Data.Costings.FirstOrDefault().RequiredQuantity"></label></th>
                                <th scope="col"><label asp-for="Data.Costings.FirstOrDefault().RequiredWeight"></label></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Data.Costings.Count; ++i)
                            {
                            <tr>
                                <td>
                                    <input asp-for="Data.Costings[i].RequiredQuantity" class="@InputClass" disabled="disabled" />
                                </td>
                                <td>
                                    <input asp-for="Data.Costings[i].RequiredWeight" asp-format="@WeightFormat" class="@InputClass" disabled="disabled" />
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    </div>
    <br />
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
