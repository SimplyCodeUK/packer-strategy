@model PackItUI.Areas.Packs.Models.PackViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete Pack";

    var LabelAttributes = new { @class = "control-label col-sm-1" };
    var DisabledAttributes = new { @class = "form-control", disabled = "disabled" };
}

<h2>@ViewData["Title"]</h2>

@using (Html.BeginForm("Delete", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div id="Tabs" role="tabpanel">
        <ul class="nav nav-tabs" role="tablist">
            <li class="active">
                <a href="#pack" aria-controls="pack" role="tab" data-toggle="tab">Pack</a>
            </li>
        </ul>

        <div class="tab-content">
            <br />
            <div role="tabpanel" class="tab-pane form-horizontal active" id="pack">
                <div class="form-group">
                    @Html.LabelFor(m => m.Data.PackId, LabelAttributes)
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Data.PackId, DisabledAttributes)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Data.Name, LabelAttributes)
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Data.Name, DisabledAttributes)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Data.Notes, LabelAttributes)
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Data.Notes, DisabledAttributes)
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    </div>
    <br />
}
