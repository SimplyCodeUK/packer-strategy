@model PackItUI.Areas.Packs.Models.PackUpdateViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Display Pack";

    var LabelClass = "control-label col-sm-1";
    var InputClass = "form-control";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Home" asp-action="Display" method="post">
    <input asp-for="Data.PlanCode" hidden="hidden" />
    <input asp-for="Data.PlanName" hidden="hidden" />
    <input asp-for="Data.MaterialType" hidden="hidden" />
    <input asp-for="Data.MaterialCode" hidden="hidden" />
    <input asp-for="Data.MaterialName" hidden="hidden" />

    <div id="Tabs" role="tabpanel">
        <ul class="nav nav-tabs" role="tablist">
            <li class="active">
                <a href="#pack" aria-controls="pack" role="tab" data-toggle="tab">Pack</a>
            </li>
        </ul>
        <div class="tab-content">
            <br />
            <div role="tabpanel" class="tab-pane form-horizontal active" id="pack">
                <div class="form-group">
                    <label asp-for="Data.PackId" class="@LabelClass"></label>
                    <div class="col-sm-10">
                        <input asp-for="Data.PackId" class="@InputClass" disabled="disabled" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Data.Name" class="@LabelClass"></label>
                    <div class="col-sm-10">
                        <input asp-for="Data.Name" class="@InputClass" />
                    </div>
                </div>
                <div class="form-group">
                    <canvas></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <input type="submit" value="Update" class="btn btn-secondary" />
        </div>
    </div>
    <br />
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
