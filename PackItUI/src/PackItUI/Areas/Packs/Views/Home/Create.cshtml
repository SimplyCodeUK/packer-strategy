@model PackItUI.Areas.Packs.Models.PackViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "New Pack";

    var LabelClass = "control-label col-sm-1";
    var InputClass = "form-control";
    var WeightFormat = "{0:N4}";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Home" asp-action="Create" method="post">
    <div id="Tabs" role="tabpanel">
        <ul class="nav nav-tabs" role="tablist">
            <li class="active">
                <a href="#pack" aria-controls="pack" role="tab" data-toggle="tab">Pack</a>
            </li>
            <li>
                <a href="#costings" aria-controls="costings" role="tab" data-toggle="tab">Costings</a>
            </li>
        </ul>
        <div class="tab-content">
            <br />
            <div role="tabpanel" class="tab-pane form-horizontal active" id="pack">
                <div class="form-group">
                    <label asp-for="Data.PackId" class="@LabelClass"></label>
                    <div class="col-sm-10">
                        <input asp-for="Data.PackId" class="@InputClass" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Data.Name" class="@LabelClass"></label>
                    <div class="col-sm-10">
                        <input asp-for="Data.Name" class="@InputClass" />
                    </div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane form-horizontal" id="costings">
                <div class="form-group">
                    <table class="table">
                        <thead>
                            <tr>
                                <th><label asp-for="Data.Costings.FirstOrDefault().RequiredQuantity" class="@LabelClass"></label></th>
                                <th><label asp-for="Data.Costings.FirstOrDefault().RequiredWeight" class="@LabelClass"></label></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Data.Costings.Count; ++i)
                            {
                                <tr>
                                    <td>
                                        <input asp-for="Data.Costings[i].RequiredQuantity" class="@InputClass" />
                                    </td>
                                    <td>
                                        <input asp-for="Data.Costings[i].RequiredWeight" asp-format="@WeightFormat" class="@InputClass" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
    <br />
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
