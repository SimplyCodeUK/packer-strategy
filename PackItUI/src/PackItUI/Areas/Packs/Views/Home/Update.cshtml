@model PackItUI.Areas.Packs.Models.PackUpdateViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Update Pack";

    var LabelClass = "control-label col-sm-1";
    var InputClass = "form-control";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Home" asp-action="Update" method="post">
    <input asp-for="Data.PlanCode" hidden="hidden" />
    <input asp-for="Data.PlanName" hidden="hidden" />
    <input asp-for="Data.MaterialType" hidden="hidden" />
    <input asp-for="Data.MaterialCode" hidden="hidden" />
    <input asp-for="Data.MaterialName" hidden="hidden" />

    <div id="Tabs" role="tabpanel">
        <ul class="nav nav-tabs">
            <li class="active">
                <a class="nav-link" href="#pack" role="tab" data-toggle="tab">Pack</a>
            </li>
            <li>
                <a class="nav-link" href="#costings" role="tab" data-toggle="tab">Costings</a>
            </li>
        </ul>
        <div class="tab-content">
            <br />
            <div class="tab-pane active" id="pack">
                <div class="form-group">
                    <label asp-for="Data.PackId" class="@LabelClass"></label>
                    <div class="col-sm-10">
                        <input asp-for="Data.PackId" class="@InputClass" disabled="disabled" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Data.Name" class="@LabelClass"></label>
                    <div class="col-sm-10">
                        <input asp-for="Data.Name" class="@InputClass" />
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="costings">
                <div class="form-group">
                    <table class="table">
                        <thead>
                            @Html.EditorFor(m => Model.Data.Costings, "CostingHeader")
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Data.Costings.Count; ++i)
                            {
                                @Html.EditorFor(m => Model.Data.Costings[i], "Costing", new { crud = PackItUI.Helpers.Crud.Update })
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <input type="submit" value="Update" class="btn btn-default" />
        </div>
    </div>
    <br />
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
