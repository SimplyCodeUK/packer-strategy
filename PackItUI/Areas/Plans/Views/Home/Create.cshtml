@model PackItUI.Areas.Plans.Models.PlanModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "New Plan";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label class="control-label col-sm-2" for="Data.PlanId">Id:</label>
            <div class="col-sm-10">
                <input class="form-control" id="Data.PlanId" placeholder="Enter Plan Id"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="Data.Name">Name:</label>
            <div class="col-sm-10">
                <input class="form-control" id="Data.Name" placeholder="Enter Plan Name" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
