@model PackItUI.Areas.Plans.Models.PlanModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "New Plan";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="POST">
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="Data.PlanId">Id:</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Data.PlanId" placeholder="Enter Plan Id"/>
                <span asp-validation-for="Data.PlanId"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="Data.Name">Name:</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Data.Name" placeholder="Enter Plan Name" />
                <span asp-validation-for="Data.Name"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" asp-for="Data.Notes">Notes:</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Data.Notes" placeholder="Enter Plan Notes" />
                <span asp-validation-for="Data.Notes"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
