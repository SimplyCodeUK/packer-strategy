@model PackItUI.Areas.Packs.Models.PackModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "New Pack";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label class="control-label col-sm-2" for="Data.PackId">Id:</label>
            <div class="col-sm-10">
                <input class="form-control" id="Data.PackId" placeholder="Enter Pack Id"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="Data.Name">Name:</label>
            <div class="col-sm-10">
                <input class="form-control" id="Data.Name" placeholder="Enter Pack Name" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
