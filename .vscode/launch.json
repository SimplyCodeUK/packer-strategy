    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch PackIt",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/PackIt/src/bin/Debug/net5.0/PackIt.dll",
            "args": [],
            "cwd": "${workspaceFolder}/PackIt/src",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/PackIt/src/Views"
            }
        },
        {
            "name": ".NET Core Launch PackItDraw",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/PackItDraw/src/bin/Debug/net5.0/PackItDraw.dll",
            "args": [],
            "cwd": "${workspaceFolder}/PackItDraw/src",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Launch PackItUI",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/PackItUI/src/bin/Debug/net5.0/PackItUI.dll",
            "args": [],
            "cwd": "${workspaceFolder}/PackItUI/src",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ],
    "compounds": [
        {
            "name": "PackIt, PackItDraw & PackItUI",
            "configurations": [
                ".NET Core Launch PackIt",
                ".NET Core Launch PackItDraw",
                ".NET Core Launch PackItUI"
            ]
        }
    ]
}